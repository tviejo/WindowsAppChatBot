<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Modern Chat UI"
        Height="700"
        Width="900"
        Background="{DynamicResource MaterialDesignBackground}"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" />
            <TextBlock Grid.Column="1" />
            <TextBlock Grid.Column="2" />

            <ToggleButton x:Name="ThemeToggle"
                          Grid.Column="3"
                          Width="100"
                          Height="40"
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"
                          FontWeight="Bold"
                          Click="ThemeToggle_Click"
                          BorderThickness="0">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="BackgroundBorder"
                                    CornerRadius="20"
                                    Background="LightGray"
                                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                    BorderThickness="1" />
                            <Ellipse x:Name="ToggleCircle"
                                     Width="32"
                                     Height="32"
                                     Fill="Orange"
                                     HorizontalAlignment="Left"
                                     Margin="4,0" />
                            <TextBlock x:Name="ToggleText"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="Light"
                                       Foreground="Black"
                                       FontWeight="Bold" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="DarkGray" />
                                <Setter TargetName="ToggleCircle" Property="Fill" Value="White" />
                                <Setter TargetName="ToggleCircle" Property="HorizontalAlignment" Value="Right" />
                                <Setter TargetName="ToggleText" Property="Text" Value="Dark" />
                                <Setter TargetName="ToggleText" Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="LightGray" />
                                <Setter TargetName="ToggleCircle" Property="Fill" Value="Orange" />
                                <Setter TargetName="ToggleCircle" Property="HorizontalAlignment" Value="Left" />
                                <Setter TargetName="ToggleText" Property="Text" Value="Light" />
                                <Setter TargetName="ToggleText" Property="Foreground" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>
        </Grid>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="213" >
            <Button x:Name="ComparisonsButton"
                    Content="Comparisons"
                    Width="200"
                    Height="50"
                    FontSize="16"
                    Click="ComparisonsButton_Click"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Padding="10"
                    Margin="0,0,0,20"
                    materialDesign:ButtonAssist.CornerRadius="15"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button x:Name="ChatbotButton"
                    Content="Chatbot"
                    Width="200"
                    Height="50"
                    FontSize="16"
                    Click="ChatbotButton_Click"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Padding="10"
                    materialDesign:ButtonAssist.CornerRadius="15"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>

        <Grid Grid.Row="2" />
    </Grid>
</Window>
