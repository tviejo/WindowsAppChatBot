<Window x:Class="WpfApp1.ChatBot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Modern Chat UI"
        Height="700"
        Width="900"
        Background="{DynamicResource MaterialDesignBackground}"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="ReturnButton"
                    Grid.Column="0"
                    Content="Return"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Click="ReturnButton_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    Foreground="White" />


            <ComboBox x:Name="ModelSelector"
                      Grid.Column="2"
                      Width="180"
                      Height="30"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"
                      Padding="5"
                      FontSize="14"
                      Foreground="{DynamicResource MaterialDesignBody}"
                      Background="{DynamicResource MaterialDesignBackground}"
                      BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                      BorderThickness="1"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}">
                <ComboBoxItem IsEnabled="False" Content="--- OpenAI ---" />
                <ComboBoxItem Content="gpt-4o-mini" />
                <ComboBoxItem Content="gpt-4o" />
                <ComboBoxItem Content="o1-mini" />
                <ComboBoxItem Content="gpt-3.5-turbo" />

                <ComboBoxItem IsEnabled="False" Content="--- Mistral ---" />
                <ComboBoxItem Content="mistral-small-latest" />
                <ComboBoxItem Content="mistral-tiny" />
                <ComboBoxItem Content="mistral-medium-latest" />
                <ComboBoxItem Content="mistral-large-latest" />

                <ComboBoxItem IsEnabled="False" Content="--- Anthropic ---" />
                <ComboBoxItem Content="claude-instant-1" />
                <ComboBoxItem Content="claude-2" />
                <ComboBoxItem Content="claude-3-haiku" />
                <ComboBoxItem Content="claude-3-5-haiku" />
                <ComboBoxItem Content="claude-3-sonnet" />
                <ComboBoxItem Content="claude-3-5-sonnet" />
            </ComboBox>

            <TextBlock Grid.Column="3" />

            <ToggleButton x:Name="ThemeToggle"
                          Grid.Column="4"
                          Width="100"
                          Height="40"
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"
                          FontWeight="Bold"
                          Click="ThemeToggle_Click"
                          BorderThickness="0">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="BackgroundBorder"
                                    CornerRadius="20"
                                    Background="LightGray"
                                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                    BorderThickness="1" />
                            <Ellipse x:Name="ToggleCircle"
                                     Width="32"
                                     Height="32"
                                     Fill="Orange"
                                     HorizontalAlignment="Left"
                                     Margin="4,0" />
                            <TextBlock x:Name="ToggleText"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="Light"
                                       Foreground="Black"
                                       FontWeight="Bold" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="DarkGray" />
                                <Setter TargetName="ToggleCircle" Property="Fill" Value="White" />
                                <Setter TargetName="ToggleCircle" Property="HorizontalAlignment" Value="Right" />
                                <Setter TargetName="ToggleText" Property="Text" Value="Dark" />
                                <Setter TargetName="ToggleText" Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="LightGray" />
                                <Setter TargetName="ToggleCircle" Property="Fill" Value="Orange" />
                                <Setter TargetName="ToggleCircle" Property="HorizontalAlignment" Value="Left" />
                                <Setter TargetName="ToggleText" Property="Text" Value="Light" />
                                <Setter TargetName="ToggleText" Property="Foreground" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>
        </Grid>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Background="{DynamicResource MaterialDesignCardBackground}"
                      Padding="20"
                      BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                      BorderThickness="1"
                      Margin="0,0,0,20">
            <Border Background="{DynamicResource MaterialDesignCardBackground}"
                    CornerRadius="15"
                    Padding="0"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <RichTextBox x:Name="TextOutput"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Padding="15"
                             FontSize="16"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             Background="{DynamicResource MaterialDesignCardBackground}">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="Welcome to Windows AI Chat" />
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Border>
        </ScrollViewer>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TextInput"
                     Grid.Column="0"
                     MinHeight="50"
                     Margin="0,0,20,0"
                     FontSize="16"
                     Padding="15"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Background="{DynamicResource MaterialDesignBackground}"
                     Foreground="{DynamicResource MaterialDesignBody}"
                     BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                     BorderThickness="1" />

            <Button x:Name="SendButton"
                    Grid.Column="1"
                    Content="Send"
                    Width="120"
                    Height="50"
                    FontSize="16"
                    Click="StoredInputText"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Padding="10"
                    materialDesign:ButtonAssist.CornerRadius="15"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </Grid>
    </Grid>
</Window>
